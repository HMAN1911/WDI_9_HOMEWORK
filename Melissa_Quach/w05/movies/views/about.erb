<h2 class="title"><%= @movie.title %></h2>
<section class="details">
  <h3>Details</h3>
  <dl>
    <dt>Plot</dt>
    <dd><%= @movie.plot %></dd>
  </dl>
  <h3>Crew</h3>
  <dl>
    <dt>Directed by</dt>
    <dd><%= @movie.director %></dd>
    <dt>Writers</dt>
    <dd><%= @movie.writer %></dd>
    <dt>Actors</dt>
    <dd><%= @movie.actor %></dd>
  </dl>
  <h3>Critical reception</h3>
  <dl>
    <dt>Awards</dt>
    <dd><%= @movie.awards %></dd>
    <dt>Metascore</dt>
    <dd><%= @movie.metascore %></dd>
    <dt>IMDb rating</dt>
    <dd><%= "#{@movie.imdb_rating}"%></dd>
  </dl>
</section>
<section class="stub">
  <img src="<%= @movie.poster %>" alt="poster" />
  <dl>
    <dt>Released</dt>
    <dd><%= @movie.released %></dd>
    <dt>Genre</dt>
    <dd><%= @movie.genre %></dd>
    <dt>Runtime</dt>
    <dd><%= @movie.runtime %></dd>
  </dl>
</section>
