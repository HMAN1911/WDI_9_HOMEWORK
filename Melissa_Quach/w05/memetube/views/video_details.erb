<a href="/">Back to list</a>

<div class="actions">
  <a href="/videos/<%= @video.id %>/edit">Edit</a>
  <form action="/videos/<%= @video.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <button class="link">Delete</button>
  </form>
</div>
<h2><a href="<%= @video.url %>" target="_blank"><%= @video.title %></a></h2>
<dl>
  <dt>Description</dt>
  <dd><%= @video.description %></dd>
  <dt>Genre</dt>
  <dd><%= @video.genre %></dd>
</dl>
<div>
  <% youtubeID = @video.url.slice(-11, @video.url.length) %>
  <iframe width="100%" height="360px"
    src="https://www.youtube.com/embed/<%= youtubeID %>"
    frameborder="0" allowfullscreen>
  </iframe>
</div>
