<h2>Edit Character</h2>

<form action="/characters/<%= @character['id']%>" method="post" class="character-form">
  <label>Character name: </label><input type="text" name="name" value="<%= @character['name']%>">
  <label>Gender: </label><input type="text" name="gender" value="<%= @character['gender']%>">
  <label>Age: </label><input type="number" name="age" value="<%= @character['age']%>">
  <div class="buttons">
    <button>Update</button>
  </div>
</form>
