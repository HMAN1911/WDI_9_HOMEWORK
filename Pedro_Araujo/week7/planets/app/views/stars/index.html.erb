<div class="header">
  <h1>Stars</h1>

</div>
<div class="space"></div>
<div class="content">

  <% @stars.each do |star| %>

    <div class="ui-card">
      <header class="content">
        <span class="right"><%= time_ago_in_words(star.created_at) %></span>
      </header>

      <div class="image">
        <img src="http://cdn.phys.org/newman/gfx/news/hires/sun.jpg" alt="" />
        <span class="star">&#9733;</span>
      </div>

      <div class="ui-content">
        <h3><%= star.name %></h3>
        <span><%= truncate(star.description, length: 100) { link_to "(See more)", "#" } %></span>
      </div>

      <div class="ui-content">
        <%= link_to image_tag("edit.png",class: "btn-card", alt: 'Edit') , edit_star_path(star) %>
        <%= link_to image_tag("delete.png",class: "btn-card right", alt: 'Delete'), star, method: :delete, data: { confirm: "Are you sure you want to delete this item?"} %>
      </div>
    </div>

  <% end %>
</div>
