<div class="header">
  <h1>New Satellite</h1>

</div>

<div class="content">
  <%= form_tag '/satellites' , method: 'post' , class:"pure-form pure-form-aligned" do %>
    <fieldset>
        <div class="pure-control-group">
            <label for="name">Name</label>
            <input id="name" name="name" type="text" placeholder="Natural Satellite Name" value="">
        </div>

        <div class="pure-control-group">
            <label for="img_url">Image URL</label>
            <input name="img_url" type="text" placeholder="Image URL" value="">
        </div>

        <div class="pure-control-group">
          <label>Planet</label>
          <select name="planet" class="pure-input-1-2">
            <option disabled="" selected=""> </option>
            <% @planets.each do |planet| %>
                <option name="planet" value="<%= planet.id %>"><%= planet.name %></option>
            <% end %>
          </select>
        </div>

        <div class="pure-control-group">
            <label>Description</label>
            <textarea name="description" rows="8" cols="40"></textarea>
        </div>

        <div class="pure-controls">
            <button class="pure-button pure-button-primary">Submit</button>
        </div>
    </fieldset>
  <% end %>
</div>
