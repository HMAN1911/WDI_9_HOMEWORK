<div class="col-3 col-m-2"></div>
<div class="planet-div col-6 col-m-8">
  <h3><%= @planet["name"] %></h3>

  <a href="/planet/<%= @planet['id'] %>"><img  class="planet" src="<%= @planet['image_url'] %>" alt="" /></a>

  <p>
    Name: <%= @planet["name"] %> <br>
    Moons: <%= @planet["populated"] %> <br>
  </p>
  <p>
    <%= @planet["description"] %>
  </p>

  <div class="button-div">
    <form class="" action="/planets/<%= @planet["id"] %>/delete" method="post">
      <button>Delete</button>
    </form>
    <form class="" action="/planets/<%= @planet["id"] %>/edit" method="get">
      <button>Edit</button>
    </form>
  </div>
</div>
<div class="col-3 col-m2"></div>
