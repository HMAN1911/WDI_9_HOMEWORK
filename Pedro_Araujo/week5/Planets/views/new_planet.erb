<div class="col-8 col-m-8 form-div ">
  <form class="new-edit-form" action="/planets" method="get">
    <label class="form-item" for="">Name:</label>
    <input class="form-item" type="text" name="name">
    <br>
    <label class="form-item" for="">Quantity of moons:</label>
    <input class="form-item" type="text" name="moons">
    <br>
    <label class="form-item" for="">Image URL:</label>
    <input class="form-item" type="text" name="image_url" size="62" >
    <br>
    <label class="form-item" for="">Description:</label>
    <textarea class="form-item" name="description" rows="8" cols="60"></textarea>
    <br>
    <button>Create new planet!</button>
  </form>
</div>
