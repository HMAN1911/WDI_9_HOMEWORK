<h2 class="subtitle">Edit Planet</h2>
<div class="col-2 col-m-2"></div>
<div class="col-8 col-m-8 form-div ">
  <form class="new-edit-form" action="/planets/<%= @planet['id'] %>/edit" method="post">
    <label class="form-item" for="">Name:</label>
    <input class="form-item" type="text" name="name" value="<%= @planet['name'] %>">
    <br>
    <label class="form-item" for="">Quantity of moons:</label>
    <input class="form-item" type="text" name="moons" value="<%= @planet['moons'] %>">
    <br>
    <label class="form-item" for="">Image URL:</label>
    <input class="form-item" type="text" name="image_url" size="62" value="<%= @planet['image_url'] %>" >
    <br>
    <label class="form-item" for="">Description:</label>
    <textarea class="form-item" name="description" rows="8" cols="60"><%= @planet['description'] %></textarea>
    <br>
    <button>Save</button>
  </form>
</div>
<div class="col-2 col-m-2"></div>
