<form>
  <div class='input-box'>
    <input name="title" type="text">
    <button>Movie search</button>
  </div>
</form>

<div class='details'>
  <h3>Which movie are you looking for?</h3>
  
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

<script>
$('button').on('click', function(event) {
  event.preventDefault();

  var options = {
    url: '/search',
    method: 'post',
    data: { 
      title: $(event.target).closest('.input-box').find('input').val()
    }
  };

  $.ajax(options).done(function(data){
    $('.details > p').remove();

    data.forEach(function(movie){
      
      var $a = $("<a>", {
          href: "/about?id=" + movie.imdbID,
          text: movie.Title
      });

      var $h2 = $("<h2>").append($a);
      $('.details').append($h2);

    });
  });
});
</script>